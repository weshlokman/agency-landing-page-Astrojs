---
import Container from "../shared/Container.astro";
import Paragraph from "../shared/Paragraph.astro";
import Title from "../shared/Title.astro";

// Replace with real image imports or paths
import profileRabii from "/public/images/founder_rabii.jpg";
import profileLokman from "/public/images/founder_lokman.jpeg";
---

<section id="about-us" class="py-15">
  <Container className="space-y-10">
    <!-- Heading -->
    <div class="text-center max-w-3xl mx-auto space-y-4">
      <Title>About&nbsp;Us</Title>
      <Paragraph>Meet the team behind LaunchLegit</Paragraph>
    </div>

    <!-- Profile cards -->
    <div class="grid sm:grid-cols-2 gap-6">
      <!-- Joseph Gray -->
      <div class="p-5 sm:p-6 lg:p-8 rounded-3xl
         border border-box-border bg-box-bg
         shadow-lg shadow-box-shadow
         relative overflow-hidden
         flex flex-col items-center justify-center text-center">
        <img
          src={profileRabii.src}
          alt="Rabi "
          class="h-36 w-36 rounded-full object-cover mb-4 border-2 border-heading-1"
        />
        <h3 class="text-xl font-semibold text-heading-1">Rabii Babou</h3>
        <p class="text-sm text-gray-500 dark:text-gray-400">
          Co‑Founder & CEO
        </p>
        <Paragraph className="text-sm">
            Handles client relations, setups, and partnerships for legit U.S. launches.
        </Paragraph>
        <!-- LinkedIn icon -->
        <a href="https://www.linkedin.com/in/rabii-babou/" target="_blank" rel="noopener noreferrer" class="inline-flex items-center justify-center mt-2 text-heading-1 hover:opacity-80">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="h-5 w-5 fill-current">
            <path d="M4.98 3.5C4.98 4.88 3.86 6 2.49 6 1.1 6 0 4.88 0 3.5 0 2.12 1.1 1 2.49 1 3.86 1 4.98 2.12 4.98 3.5zM.16 8.13h4.66V23H.16V8.13zM8.2 8.13h4.47v2.03h.06c.62-1.18 2.14-2.43 4.4-2.43 4.71 0 5.57 3.1 5.57 7.13V23h-4.66v-6.77c0-1.62-.03-3.7-2.26-3.7-2.26 0-2.61 1.75-2.61 3.58V23H8.2V8.13z"/>
          </svg>
          <span class="sr-only">LinkedIn</span>
        </a>
      </div>

      <!-- Partner / Co‑Founder -->
      <div class="p-5 sm:p-6 lg:p-8 rounded-3xl
         border border-box-border bg-box-bg
         shadow-lg shadow-box-shadow
         relative overflow-hidden
         flex flex-col items-center justify-center text-center">
        <img
          src={profileLokman.src}
          alt="Ruki"
          class="h-36 w-36 rounded-full object-cover mb-4 border-2 border-heading-1"
        />
        <h3 class="text-xl font-semibold text-heading-1">Lokman Sahnoun</h3>
        <p class="text-sm text-gray-500 dark:text-gray-400">
          Co‑Founder & COO
        </p>
        <Paragraph className="text-sm">
            Runs ops, creator relations, and automations for a seamless TikTok Shop.
        </Paragraph>
        <!-- LinkedIn icon -->
        <a href="https://linkedin.com/in/lokman-s-6bb110122" target="_blank" rel="noopener noreferrer" class="inline-flex items-center justify-center mt-2 text-heading-1 hover:opacity-80">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="h-5 w-5 fill-current">
              <path d="M4.98 3.5C4.98 4.88 3.86 6 2.49 6 1.1 6 0 4.88 0 3.5 0 2.12 1.1 1 2.49 1 3.86 1 4.98 2.12 4.98 3.5zM.16 8.13h4.66V23H.16V8.13zM8.2 8.13h4.47v2.03h.06c.62-1.18 2.14-2.43 4.4-2.43 4.71 0 5.57 3.1 5.57 7.13V23h-4.66v-6.77c0-1.62-.03-3.7-2.26-3.7-2.26 0-2.61 1.75-2.61 3.58V23H8.2V8.13z"/>
            </svg>
            <span class="sr-only">LinkedIn</span>
          </a>
      </div>
    </div>
  </Container>
</section>
